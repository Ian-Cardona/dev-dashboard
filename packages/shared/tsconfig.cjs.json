  "compilerOptions": {
    "outDir": "dist/cjs",
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
