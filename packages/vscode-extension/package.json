{
  "name": "dev-dashboard",
  "displayName": "Dev Dashboard",
  "publisher": "iancardona",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:devDashboardOnboarding",
    "onView:devDashboardMain",
    "onCommand:vscode-extension.setApiKey",
    "onCommand:vscode-extension.resetSecrets",
    "onCommand:vscode-extension.scanTodos",
    "onCommand:vscode-extension.syncTodos"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devDashboard",
          "title": "Dev Dashboard",
          "icon": "$(list-unordered)"
        }
      ]
    },
    "views": {
      "devDashboard": [
        {
          "id": "devDashboardOnboarding",
          "name": "Welcome",
          "contextualTitle": "Dev Dashboard - Welcome",
          "when": "!devDashboard.hasApiKey"
        },
        {
          "id": "devDashboardMain",
          "name": "TODOs",
          "when": "devDashboard.hasApiKey"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-extension.scanTodos",
        "title": "Scan TODOs",
        "icon": "$(search)"
      },
      {
        "command": "vscode-extension.syncTodos",
        "title": "Sync TODOs",
        "icon": "$(sync)"
      },
      {
        "command": "vscode-extension.setApiKey",
        "title": "Set API Key"
      },
      {
        "command": "vscode-extension.resetSecrets",
        "title": "Reset Secrets"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscode-extension.scanTodos",
          "when": "view == devDashboardMain && devDashboard.hasApiKey",
          "group": "actions@1"
        },
        {
          "command": "vscode-extension.syncTodos",
          "when": "view == devDashboardMain && devDashboard.hasApiKey",
          "group": "actions@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0"
  },
  "dependencies": {
    "@dev-dashboard/shared": "1.0.0",
    "axios": "^1.11.0"
  }
}
