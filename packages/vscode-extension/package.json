{
  "name": "dev-dashboard",
  "displayName": "Dev Dashboard",
  "publisher": "iancardona",
  "description": "Scan and send TODOs to your dashboard.",
  "version": "0.0.7",
  "icon": "DevDashboard.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ian-Cardona/dev-dashboard"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devDashboard",
          "title": "Dev Dashboard",
          "icon": "$(pass)"
        }
      ]
    },
    "views": {
      "devDashboard": [
        {
          "id": "devDashboardOnboarding",
          "name": "Welcome",
          "type": "webview",
          "when": "!devDashboard.hasApiKey",
          "icon": "$(pass)",
          "visibility": "visible"
        },
        {
          "id": "devDashboardMain",
          "name": "TODOs",
          "when": "devDashboard.hasApiKey",
          "icon": "$(pass)",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "dev-dashboard.scanTodos",
        "title": "Scan for TODOs",
        "category": "Dev Dashboard",
        "icon": "$(refresh)",
        "tooltip": "Scan your workspace for TODO, FIXME, HACK, NOTE, BUG, and XXX comments"
      },
      {
        "command": "dev-dashboard.sendTodos",
        "title": "Upload TODOs to Dashboard",
        "category": "Dev Dashboard",
        "icon": "$(cloud-upload)",
        "tooltip": "Send all scanned TODOs to your Dev Dashboard"
      },
      {
        "command": "dev-dashboard.setApiKey",
        "title": "Set API Key",
        "category": "Dev Dashboard"
      },
      {
        "command": "dev-dashboard.resetSecrets",
        "title": "Reset Secrets",
        "category": "Dev Dashboard"
      },
      {
        "command": "dev-dashboard.showTodos",
        "title": "Show TODOs",
        "category": "Dev Dashboard"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dev-dashboard.scanTodos",
          "when": "view == devDashboardMain",
          "group": "navigation@1"
        },
        {
          "command": "dev-dashboard.sendTodos",
          "when": "view == devDashboardMain",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "dev-dashboard.showTodos",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node build.js",
    "watch": "node build.js --watch",
    "package": "node build.js --production"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.27.2"
  },
  "dependencies": {
    "@dev-dashboard/shared": "1.0.0",
    "axios": "^1.11.0"
  }
}
