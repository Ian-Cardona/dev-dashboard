{
  "name": "dev-dashboard",
  "displayName": "Dev Dashboard",
  "publisher": "iancardona",
  "description": "Scan and post TODO comments from your workspace with an external service.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:devDashboardOnboarding",
    "onView:devDashboardMain"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devDashboard",
          "title": "Dev Dashboard",
          "icon": "$(list-unordered)"
        }
      ]
    },
    "views": {
      "devDashboard": [
        {
          "id": "devDashboardOnboarding",
          "name": "Welcome",
          "type": "webview",
          "contextualTitle": "Dev Dashboard",
          "when": "!devDashboard.hasApiKey"
        },
        {
          "id": "devDashboardMain",
          "name": "TODOs",
          "when": "devDashboard.hasApiKey"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "devDashboardMain",
        "contents": "No TODOs found in your workspace.\n\nAdd comments like `// TODO: fix this` or `// FIXME: update this` to your code files.\n\n[Scan for TODOs](command:dev-dashboard.scanTodos)\n\nSupported formats:\n• TODO\n• FIXME\n• HACK\n• NOTE\n• BUG",
        "when": "devDashboard.hasApiKey"
      }
    ],
    "commands": [
      {
        "command": "dev-dashboard.scanTodos",
        "title": "Scan TODOs",
        "icon": "$(search)"
      },
      {
        "command": "dev-dashboard.postTodos",
        "title": "Post TODOs",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "dev-dashboard.setApiKey",
        "title": "Set API Key"
      },
      {
        "command": "dev-dashboard.resetSecrets",
        "title": "Reset Secrets"
      },
      {
        "command": "dev-dashboard.openTodo",
        "title": "Open Todo"
      },
      {
        "command": "dev-dashboard.showTodos",
        "title": "Show TODOs"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dev-dashboard.scanTodos",
          "when": "view == devDashboardMain",
          "group": "navigation@1"
        },
        {
          "command": "dev-dashboard.postTodos",
          "when": "view == devDashboardMain",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0"
  },
  "dependencies": {
    "@dev-dashboard/shared": "1.0.0",
    "axios": "^1.11.0"
  }
}
