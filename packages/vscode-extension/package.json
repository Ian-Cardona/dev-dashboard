{
  "name": "dev-dashboard",
  "displayName": "Dev Dashboard",
  "publisher": "iancardona",
  "description": "Scan and send TODO from your workspace to your dashboard.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devDashboard",
          "title": "Dev Dashboard",
          "icon": "$(pass)"
        }
      ]
    },
    "views": {
      "devDashboard": [
        {
          "id": "devDashboardOnboarding",
          "name": "Welcome",
          "type": "webview",
          "contextualTitle": "Dev Dashboard",
          "when": "!devDashboard.hasApiKey",
          "icon": "$(pass)",
          "visibility": "visible"
        },
        {
          "id": "devDashboardMain",
          "name": "TODOs",
          "when": "devDashboard.hasApiKey",
          "icon": "$(pass)",
          "visibility": "visible"
        }
      ]
    },
    "commands": [
      {
        "command": "dev-dashboard.scanTodos",
        "title": "Dev Dashboard: Scan workspace for TODOs",
        "category": "Dev Dashboard",
        "icon": "$(refresh)"
      },
      {
        "command": "dev-dashboard.sendTodos",
        "title": "Dev Dashboard: Upload TODOs to Dashboard",
        "category": "Dev Dashboard",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "dev-dashboard.setApiKey",
        "title": "Dev Dashboard: Set API Key"
      },
      {
        "command": "dev-dashboard.resetSecrets",
        "title": "Dev Dashboard: Reset Secrets"
      },
      {
        "command": "dev-dashboard.openTodo",
        "title": "Dev Dashboard: Open Todo"
      },
      {
        "command": "dev-dashboard.showTodos",
        "title": "Dev Dashboard: Show TODOs"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dev-dashboard.scanTodos",
          "when": "view == devDashboardMain",
          "group": "navigation@1"
        },
        {
          "command": "dev-dashboard.sendTodos",
          "when": "view == devDashboardMain",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0"
  },
  "dependencies": {
    "@dev-dashboard/shared": "1.0.0",
    "axios": "^1.11.0"
  }
}
