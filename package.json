{
  "name": "dev-dashboard",
  "version": "1.0.0",
  "description": "The Ultimate Dashboard for Full Stack Developers",
  "license": "ISC",
  "author": "Ian Cardona",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm run dev -w api",
    "dev:app": "npm run dev -w app",
    "dev:shared": "npm run dev -w @dev-dashboard/shared",
    "dev": "concurrently \"npm run dev:shared\" \"npm run dev:api\" \"npm run dev:app\"",
    "build": "npm run build -w @dev-dashboard/shared && npm run build -ws --if-present",
    "clean": "rimraf packages/*/dist packages/*/out",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "jsonwebtoken": "^9.0.2",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "concurrently": "^8.2.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  }
}
